# ===== CONFIGURAÇÕES PARA VPS - PRODUÇÃO =====
# VPS: seu_ip_ou_dominio

# ===== CONFIGURAÇÕES DO BANCO DE DADOS =====
POSTGRES_DB=igreja_membros
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_forte_aqui

# ===== CONFIGURAÇÕES DA API =====
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# ===== URLS DA VPS =====
API_URL=https://seu-dominio.com
FRONTEND_URL=https://seu-dominio.com

# ===== CONFIGURAÇÕES JWT =====
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_min_64_chars
JWT_EXPIRES_IN=

# ===== ADMIN MASTER =====
MASTER_ADMIN_EMAIL=admin@igreja.com

# ===== WHATSAPP =====
WHATSAPP_ENABLED=true
WHATSAPP_SERVICE_URL=http://whatsapp:3000

# ===== CONFIGURAÇÕES DE EMAIL (OPCIONAL) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app_gmail

# ===== CONFIGURAÇÕES REDIS =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== DATABASE URL PARA PRODUÇÃO =====
DATABASE_URL=postgresql://postgres:sua_senha_forte_aqui@postgres:5432/igreja_membros?schema=public

